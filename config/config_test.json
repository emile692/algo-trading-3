{
    "general": {
        "seeds": [
            42
        ]
    },
    "model": {
        "batch_size": 64,
        "epochs": 100,
        "learning_rate": 0.001,
        "patience": 10,
        "sequence_length": 200
    },
    "meta_model": {
        "batch_size": 64,
        "epochs": 100,
        "learning_rate": 0.001,
        "patience": 10
    },
    "label": {
        "take_profit_pips": 60,
        "stop_loss_pips": 60,
        "output_dataset_path": "exogenous_model/dataset/features_and_target/features_and_target.csv",
        "pips_size": 0.0001,
        "window": 4
    },
    "features": {
        "remove_corr_threshold": 0.95,
        "protected_cols": [
            "open",
            "high",
            "low",
            "close",
            "frac_diff",
            "vix"
        ],
        "fracdiff": {
            "enable": true,
            "thresh": 1e-05,
            "use_saved_d_if_exists": true,
            "d_optimal": 0.5
        },
        "tech": {
            "sma": [
                50,
                200
            ],
            "ema": [
                20,
                100
            ],
            "rsi": 14,
            "bb": {
                "window": 20,
                "dev": 2
            },
            "atr": 14,
            "adx": 14,
            "cci": 20,
            "stoch": 14,
            "roc": 12,
            "kama": {
                "window": 10,
                "pow1": 2,
                "pow2": 30
            },
            "vwap": 14
        },
        "structural_breaks": {
            "enable": true,
            "cusum": {
                "enable": true,
                "k_sigma": 5.0,
                "h": 0.01
            },
            "sadf": {
                "enable": true,
                "min_window": 250,
                "starts_per_year": 10
            }
        }
    },
    "exogenous": {
        "vix": {
            "enable": true,
            "cache_path": "data/external/vix.parquet",
            "resample": "h"
        }
    },
    "split": {
        "train_ratio": 0.7,
        "val_ratio": 0.15,
        "test_ratio": 0.15
    }
}